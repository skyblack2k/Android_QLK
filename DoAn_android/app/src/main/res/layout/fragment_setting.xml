<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Setting.SettingFragment"
    android:padding="@dimen/paddingSetting">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/st1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radiusSettingBtn"
            app:cardBackgroundColor="@color/blueUi_2"
            android:outlineAmbientShadowColor="@color/blueUi_2"
            android:outlineSpotShadowColor="@color/blueUi_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTextSetting">

                <TextView
                    android:id="@+id/c4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginTextboxSetting"
                    android:text="20/12/2000"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="@+id/t4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t4"
                    app:layout_constraintTop_toTopOf="@+id/t4" />

                <android.support.design.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/circularRevealCardView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.circularreveal.cardview.CircularRevealCardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginTextboxSetting"
                    android:text="Tên người dùng"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_TextboxSetting"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circularRevealCardView"
                    app:layout_constraintTop_toTopOf="@+id/circularRevealCardView" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginTextboxSetting"
                    android:text="Tên người dùng"
                    android:textSize="@dimen/text_size_TextboxSetting1"
                    app:layout_constraintBottom_toBottomOf="@+id/circularRevealCardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circularRevealCardView" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="Ngày sinh:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/circularRevealCardView" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT:"
                    android:layout_marginTop="@dimen/marginTextboxSetting"
                    app:layout_constraintStart_toStartOf="@+id/t1"
                    app:layout_constraintTop_toBottomOf="@+id/t1" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginTextboxSetting"
                    android:text="0932200445"
                    android:maxLines="1"

                    app:layout_constraintBottom_toBottomOf="@+id/t2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t2"
                    app:layout_constraintTop_toTopOf="@+id/t2" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chức vụ:"
                    android:layout_marginTop="@dimen/marginTextboxSetting"
                    app:layout_constraintStart_toStartOf="@+id/t2"
                    app:layout_constraintTop_toBottomOf="@+id/t2" />

                <TextView
                    android:id="@+id/c1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginTextboxSetting"
                    android:text="20/12/2022"
                    android:maxLines="1"

                    app:layout_constraintBottom_toBottomOf="@+id/t1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t1"
                    app:layout_constraintTop_toTopOf="@+id/t1" />

                <TextView
                    android:id="@+id/c3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginTextboxSetting"
                    android:text="Quản lý"
                    android:maxLines="1"

                    app:layout_constraintBottom_toBottomOf="@+id/t3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t3"
                    app:layout_constraintTop_toTopOf="@+id/t3" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTextboxSetting"
                    android:text="Ngày tạo:"
                    app:layout_constraintStart_toStartOf="@+id/t3"
                    app:layout_constraintTop_toBottomOf="@+id/t3" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:"
                    android:layout_marginTop="@dimen/marginTextboxSetting"
                    app:layout_constraintStart_toStartOf="@+id/t4"
                    app:layout_constraintTop_toBottomOf="@+id/t4" />

                <TextView
                    android:id="@+id/c5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginTextboxSetting"
                    android:text="Hà Nội"
                    app:layout_constraintBottom_toBottomOf="@+id/t5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t5"
                    app:layout_constraintTop_toTopOf="@+id/t5" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginCardSetting"
            app:cardCornerRadius="@dimen/radiusSettingBtn"
            app:cardBackgroundColor="@color/blueUi_2"
            android:outlineAmbientShadowColor="@color/blueUi_2"
            android:outlineSpotShadowColor="@color/blueUi_2"
            app:layout_constraintStart_toStartOf="@id/st1"
            app:layout_constraintTop_toBottomOf="@id/hethong"
            app:layout_constraintEnd_toEndOf="@id/st1"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_light_mode_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/paddingTextSetting"
                    android:text="@string/settingBtn1"
                    app:layout_constraintStart_toEndOf="@id/icon2"
                    app:layout_constraintTop_toTopOf="@id/icon2"
                    app:layout_constraintBottom_toBottomOf="@id/icon2"
                    app:layout_constraintEnd_toStartOf="@id/s2"/>

                <Switch
                    android:id="@+id/s2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="@id/icon2"
                    app:layout_constraintBottom_toBottomOf="@id/icon2"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginCardSetting"
            app:cardCornerRadius="@dimen/radiusSettingBtn"
            app:cardBackgroundColor="@color/blueUi_2"
            android:outlineAmbientShadowColor="@color/blueUi_2"
            android:outlineSpotShadowColor="@color/blueUi_2"
            app:layout_constraintStart_toStartOf="@id/btn1"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintEnd_toEndOf="@id/btn1"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_logout_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/paddingTextSetting"
                    android:text="@string/settingBtn2"
                    app:layout_constraintStart_toEndOf="@id/icon1"
                    app:layout_constraintTop_toTopOf="@id/icon1"
                    app:layout_constraintBottom_toBottomOf="@id/icon1"
                    app:layout_constraintEnd_toStartOf="@id/s1"/>

                <ImageView
                    android:id="@+id/s1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintTop_toTopOf="@id/icon1"
                    app:layout_constraintBottom_toBottomOf="@id/icon1"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/hethong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_hethong">

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/btn_hethong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginTextboxSetting"
            android:text="Xem thông tin hệ thống"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/st1" />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>